.btn-microphone
  position: relative
  display: block
  border-radius 50px
  border 3px solid #001522
  background: linear-gradient(to top, #001522 0%, #3d464c 100%)
  font-size 50px
  line-height: 80px
  margin 0 auto -20px
  width 100px
  height 100px
  cursor: pointer
  color #f5f5f5
  // box-shadow: 0 0 5px 2px rgba(#000, 0.3)


.list-enter
  opacity 0
  transform scale(0.95)

.list-enter-active
  transition-property transform, opacity
  transition-duration 400ms
  transition-timing-function $easeOutQuart

.list-enter-to-class
  opacity 1
  transform scale(1)
