@import 'easing'

.wrapper
  display: flex
  flex-direction: column
  height 100vh
  overflow: hidden

.speech_wrap
  flex 1
  width 90%
  margin auto
  padding 40px
  overflow-y: scroll

  &::-webkit-scrollbar
    width: 5px
  &::-webkit-scrollbar-thumb
    background-color #001522
  &::-webkit-scrollbar-track-piece
    background-color: #f2f2f2
    box-shadow: 1px 0 3px 0 rgba(#333, 0.2) inset

.speech-lists
  margin auto
  border 1px solid #ccc
  border-radius: 5px
  list-style: none
  padding 0
  overflow hidden

.speech-list
  border-top 1px solid #eee
  padding 1em

  &:first-child
    border-top none

  &:nth-child(2n)
    background-color #f9f9f9

.speech-list--date
  font-size 0.8em
  color #aaa

.action--wrapper
  position: relative
  text-align: center

