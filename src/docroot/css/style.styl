.btn-microphone
  position: relative
  display: block
  border-radius 50px
  border none
  background: #fff
  font-size 40px
  // line-height: 80px
  margin 10px auto 5px
  padding 0
  width 100px
  height 100px
  cursor: pointer
  color #666
  box-shadow: 0 0 10px 2px rgba(#000, 0.3)
  outline none
  transition all 250ms ease

  &:focus
    outline none

  &:hover
    color #333
    box-shadow: 0 0 7px 1px rgba(#000, 0.5)

  &.is-recognizing
    color #ff0000
    box-shadow: 0 0 2px 0 rgba(#000, 0.5)
    background-color #f9f9f9

    > i
      transform translateY(-0.8rem)
  > i
    display block
    transition transform 250ms ease
    // position absolute
    // top 0
    // right 0
    // bottom 0
    // left 0
    // width 1em
    // height 1em
    // margin auto

.speech-message
  display block
  color #666
  position absolute
  right 0
  bottom 1.2rem
  left 0
  font-size 0.8rem

.list-enter
  opacity 0
  transform scale(0.95)

.list-enter-active
  transition-property transform, opacity
  transition-duration 400ms
  transition-timing-function $easeOutQuart

.list-enter-to-class
  opacity 1
  transform scale(1)

.fade-enter
.fade-leave-to
  opacity 0

.fade-enter-active
.fade-leave-active
  transition opacity 300ms ease
